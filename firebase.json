{
  "functions": {
    "source": ".",
    "runtime": "nodejs22"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/proxy", "function": "proxy" },
      { "source": "/proxy/**", "function": "proxy" },
      { "source": "/healthz", "function": "proxy" },
      { "source": "/notify-email", "function": "proxy" }
    ]
  }
}
