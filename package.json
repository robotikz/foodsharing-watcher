{
  "name": "foodsharing-watcher",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --mode local",
    "dev:local": "vite --mode local",
    "dev:emulator": "vite --mode emulator",
    "build": "vite build --mode firebase",
    "build:local": "vite build --mode local",
    "build:emulator": "vite build --mode emulator",
    "build:firebase": "vite build --mode firebase",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx",
    "env": "npx env-cmd -f .env printenv",
    "test-email": "curl -X POST http://localhost:8787/notify-email -H \"Content-Type: application/json\" -d '{\"subject\":\"Test\",\"text\":\"Test message from script\"}'",
    "fb:login": "firebase login",
    "fb:logout": "firebase logout",
    "fb:use": "firebase use foodsharing-watcher",
    "secrets:set": "node --env-file=.env scripts/set-secrets.mjs",
    "secrets:set:local": "node --env-file=.env.local scripts/set-secrets.mjs",
    "deploy:functions": "firebase deploy --only functions:proxy --project foodsharing-watcher",
    "deploy:hosting": "npm run build:firebase && firebase deploy --only hosting --project foodsharing-watcher",
    "deploy": "npm run build:firebase && firebase deploy --project foodsharing-watcher",
    "emulate": "firebase emulators:start --project foodsharing-watcher",
    "emulate:functions": "firebase emulators:start --only functions --project foodsharing-watcher",
    "emulate:full": "concurrently -k \"npm:emulate\" \"npm:dev:emulator\"",
    "proxy": "node --env-file=.env.local server/local.mjs",
    "proxy:local": "node --env-file=.env.local server/local.mjs",
    "start": "concurrently -k \"npm:proxy:local\" \"npm:dev:local\"",
    "start:local": "concurrently -k \"npm:proxy:local\" \"npm:dev:local\"",
    "start:emulator": "concurrently -k \"npm:emulate\" \"npm:dev:emulator\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.0.0",
    "firebase-functions": "^5.1.1",
    "nodemailer": "^7.0.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "firebase-tools": "^14.23.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.15",
    "vite": "^7.1.12"
  }
}
